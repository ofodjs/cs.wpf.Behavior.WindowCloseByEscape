<Window x:Class="WpfClosingByEscape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:bhv="clr-namespace:WpfClosingByEscape.Behaviors"
        bhv:WindowClosingBehavior.Enabled="True"
        >
    <StackPanel Orientation="Vertical">
        <Label>Try to close window by pressing ESCAPE.</Label>
        <Label>Another time try to close by click to cross-button in window header.</Label>
    </StackPanel>
</Window>
